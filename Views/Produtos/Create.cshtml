@model PapelariaMVC.Models.Produto

@{
    ViewData["Title"] = "Criar Produto";
}

<div class="container mt-5">
    <h1 class="display-4">Criar Produto</h1>
    <h4 class="mb-4">Preencha os dados abaixo</h4>
    <hr />

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" placeholder="Nome do Produto" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>
                    <input asp-for="Descricao" class="form-control" placeholder="Descrição do Produto" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Preco" class="control-label"></label>
                    <input asp-for="Preco" class="form-control" placeholder="Preço" type="number" step="0.01" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="QuantidadeEstoque" class="control-label"></label>
                    <input asp-for="QuantidadeEstoque" class="form-control" placeholder="Quantidade em Estoque" type="number" />
                    <span asp-validation-for="QuantidadeEstoque" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FornecedorId" class="control-label"></label>
                    <select asp-for="FornecedorId" class="form-control" asp-items="ViewBag.FornecedorId"></select>
                    <span asp-validation-for="FornecedorId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Criar Produto" class="btn btn-primary btn-block" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Voltar para Lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
