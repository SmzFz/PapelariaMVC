@model PapelariaMVC.Models.Venda

@{
    ViewData["Title"] = "Criar Venda";
}

<div class="container mt-5">
    <h1 class="display-4">Criar Nova Venda</h1>
    <h4 class="mb-4">Preencha os dados abaixo</h4>
    <hr />

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <div class="form-group">
                    <label asp-for="ClienteId" class="control-label"></label>
                    <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId">
                        <option value="">Selecione um Cliente</option>
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="ProdutoId" class="control-label"></label>
                    <select asp-for="ProdutoId" class="form-control" asp-items="ViewBag.ProdutoId">
                        <option value="">Selecione um Produto</option>
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="ValorTotal" class="control-label"></label>
                    <input asp-for="ValorTotal" class="form-control" placeholder="Valor Total" />
                    <span asp-validation-for="ValorTotal" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DataEmissao" class="control-label"></label>
                    <input asp-for="DataEmissao" class="form-control" type="date" />
                    <span asp-validation-for="DataEmissao" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Criar Venda" class="btn btn-primary btn-block" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Voltar para Lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
